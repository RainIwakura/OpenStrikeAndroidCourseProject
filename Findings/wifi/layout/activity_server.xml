<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wifiserver.ServerActivity"
    tools:ignore="MergeRootFrame" >

    <EditText
        android:id="@+id/getIpField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/enter_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter IP" />

    <Button
        android:id="@+id/sendIpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Ip" />

    <EditText
        android:id="@+id/ip_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/push_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Push port" 
        android:onClick="savePort"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" 
        android:onClick="goBackClient"/>

</LinearLayout>
